### _assert_in

#!spiral

inl _assert_in items x =
    (None, items)
    ||> listm.fold fun acc x' =>
        match acc with
        | Some x => Some x
        | None =>
            if x' <>. x
            then None
            else
                trace Debug (fun () => "_assert_in") fun () => { x x' }
                Some ()
    |> function
        | Some _ => ()
        | None =>
            "_assert_in / " ++# ({ x items } |> sm'.format) |> failwith

